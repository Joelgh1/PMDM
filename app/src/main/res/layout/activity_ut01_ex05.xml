<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_margin="@dimen/both_spacing"
    tools:context=".ut01.ex05.presentation.Ut01Ex05Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_size"
        tools:background="@tools:sample/avatars">

        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/both_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/line_spacing"
            android:background="@color/white_50">
            
            <TextView
                tools:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:srcCompat="@drawable/ic_wings"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/title_font_size"
        tools:text="Chubasquero de Sta. Teresa"
        android:layout_marginTop="@dimen/line_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        tools:text="Bar Restaurante El Comienzo"
        android:layout_marginTop="@dimen/line_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_points"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Total: 2ptos"/>

        <TextView
            android:id="@+id/label_avg"
            android:layout_toRightOf="@+id/label_points"
            android:layout_marginLeft="@dimen/line_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Media: 4"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_toRightOf="@+id/label_avg"
            app:srcCompat="@drawable/empty_star"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_toLeftOf="@+id/ic_favorite"
            app:srcCompat="@drawable/ic_share"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_favorite"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/empty_heart"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>